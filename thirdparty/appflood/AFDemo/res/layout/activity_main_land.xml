<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="3sp"
    android:paddingRight="3sp"
    android:id="@+id/afdemoly"
    >

    <TextView 
        android:layout_width="305sp"
        android:layout_height="40sp"
        android:text="show message"
        android:id="@+id/showport"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30sp"
        />

	<Button
	    android:layout_marginTop="50sp" 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="fullscreen ads"
	    android:id="@+id/fullscreen"
	    android:layout_alignParentRight="true"
	    
	    />
	<Button
	    android:layout_marginTop="50sp" 
        android:layout_width="150sp"
    	android:layout_height="40sp"
    	android:text="Preload"
    	android:id="@+id/preload"
    	android:layout_toLeftOf="@id/fullscreen"
    	android:layout_marginRight="5sp"
    	
        />
	<TextView 
        android:layout_width="305sp"
        android:layout_height="40sp"
        android:text="show message"
        android:id="@+id/showLand"
        android:layout_toLeftOf="@id/preload"
        android:layout_marginTop="80sp"
        android:visibility="gone"
        />
	<Button 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="PanelDown ads"
	    android:id="@+id/showPanelDown"
	    android:layout_below="@id/fullscreen"
   	    android:layout_alignParentRight="true"
   	    
	    />
	<Button 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="PanelTop ads"
	    android:id="@+id/showPanelTop"
	    android:layout_below="@id/fullscreen"
	    android:layout_toLeftOf="@id/showPanelDown"
	    android:layout_marginRight="5sp"
	    
	    />
	<Button 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="BannerMiddle ads"
	    android:id="@+id/showBannerMiddle"
	    android:layout_below="@id/showPanelTop"
 	    android:layout_alignParentRight="true"
 	    
	    />
	<Button 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="BannerSmall ads"
	    android:id="@+id/showBannerSmall"
	    android:layout_below="@id/showPanelTop"
	    android:layout_toLeftOf="@id/showBannerMiddle"
	    android:layout_marginRight="5sp"
	    
	    />
	<Button 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="TestConnect"
	    android:id="@+id/connect"
	    android:layout_below="@id/showBannerMiddle"
	    android:layout_alignParentRight="true"
	   
	    />
	<Button 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="get_raw_data"
	    android:id="@+id/destroy"
	    android:layout_below="@id/showBannerSmall"
	    android:layout_toLeftOf="@id/connect"
	    android:layout_marginRight="5sp"
	    
	    />
	<Button 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="QueryPoint"
	    android:id="@+id/query"
	    android:layout_below="@id/connect"
	    android:layout_alignParentRight="true"
	    
	    />
	<Button 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="ConsumePoint"
	    android:id="@+id/consume"
	    android:layout_below="@id/destroy"
	    android:layout_toLeftOf="@id/query"
	    android:layout_marginRight="5sp"
	    
	    />
	<Button 
	    android:layout_width="150sp"
	    android:layout_height="40sp"
	    android:text="show Offerwall"
	    android:id="@+id/gettype"
	    android:layout_below="@id/query"
	    android:layout_alignParentRight="true"
	    
	    />
	<Spinner 
	    android:id="@+id/spinner"
	    android:layout_width="150sp"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/consume"
	    android:layout_toLeftOf="@id/gettype"
	    android:layout_marginRight="5sp"
	    />
</RelativeLayout>